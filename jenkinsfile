#!/usr/bin/env groovy

lobrary identifier: 'jenkins-shared-library@master', retriever: modernSCM(
    [$class: 'GitSCMSource'
     remote: 'https://gitlab.com/alexix/jenkins-shared-library.git',
     credentialsId: 'gitlab-credentials'
    ]
)

pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    environment {
        IMAGE_NAME = 'aleqxan/fox-app:java-maven-2.0'
    }
    stages {
        stage('build app') {
            steps {
                script {
                    echo 'building application...'
                    buildJar ()
                }
            }
        }
        stage('build image') {
            steps {
                script {
                    echo 'building docker image'
                    buildImage(env.IMAGE_NAME)
                    dockerLogin()
                    dockerPush(env.IMAGE_NAME)
                }
            }
        }
        stage('provision server') {
            steps {
                script {
                    dir('terraform') {
                        sh "terraform init"
                        sh "terraform apply --auto-approve"
                    }
                }
            }
        }
        stage('deploy') {
            steps {
                script {
                    echo 'deploying docker image to EC2'

                    def shellCmd = "bash ./server-cmds.sh ${IMAGE_NAME}"
                    def "ec2-user@37.177.245.119"

                    sshagent(['ec2-server-key']) {
                        sh "scp srever-cmds.sh ${ec2Instance}:/home/ec2-user"
                        sh "scp docker-compose.yaml ${ec2Instance}:/home/ec2-user"
                        sh "ssh -o StrictHostKeyChecking=no ${ec2Instance} ${shellCmd}"
                    }
                }
            }
        }
    }
}
